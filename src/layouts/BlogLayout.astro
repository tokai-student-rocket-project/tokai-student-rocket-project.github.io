---
const { frontmatter } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} | TSRP Blog</title>
  </head>

  <body>
    <header>
      <section class="hero is-info">
        <div class="hero-body">
          <p class="title">TSRP Blog</p>
          <p class="subtitle has-text-centered is-underlined is-size-1">
            {frontmatter.title}
          </p>
        </div>
      </section>
    </header>

    <div
      class="content has-text-centered is-size-3 has-background-info-light has-text-info m-0"
    >
      <slot />
    </div>

    <footer class="footer">
      <div class="content has-text-centered">
        <p>
          <strong>{frontmatter.title}</strong> Written by {frontmatter.author}.
          <br />
          Date created {frontmatter.date}.
        </p>
      </div>
      <div class="buttons has-addons is-right">
        <button class="button is-link is-light"
          ><a href="/blog/">Blog一覧へ戻る</a></button
        >
      </div>
    </footer>
  </body>
</html>
