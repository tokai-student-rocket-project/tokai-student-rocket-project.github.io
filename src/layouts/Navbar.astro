---
import logo from "./images/logo.png";
import favicon from "./images/favicon.png";
---

<nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" style={{ width: "231px" }} href="/">
      <img
        src={logo}
        style={{
          height: "36px !important",
          maxHeight: "56px !important",
        }}
      />
    </a>

    <a
      role="button"
      class="navbar-burger"
      aria-label="menu"
      aria-expanded="false"
      data-target="navbarMenuData"
    >
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarMenuData" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item" href="/">Home</a>
      <a class="navbar-item">About</a>
      <a class="navbar-item">Our Rockets</a>
      <a class="navbar-item">Contact</a>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <a
          class="button is-link is-outlined"
          href="http://deka.challe.u-tokai.ac.jp/srp/index.html"
        >
          <span class="icon">
            <figure class="image image is-16x16">
              <img src={favicon} />
            </figure>
          </span>
          <span>Legacy</span></a
        >
      </div>
    </div>
  </div>
</nav>
